<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/root_lay"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginBottom="8dp"
		app:cardBackgroundColor="#FFF"
		app:cardCornerRadius="4dp"
		app:cardElevation="2dp"
		app:cardPreventCornerOverlap="true">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:orientation="horizontal">

			<RelativeLayout
				android:id="@+id/related_img_lay"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#6A6868">

				<ImageView
					android:id="@+id/adapter_related_video_image"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:scaleType="centerCrop"
					android:src="@drawable/img_video"/>

			</RelativeLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:orientation="vertical"
				android:paddingStart="8dp"
				android:paddingEnd="8dp"
				android:weightSum="4.5">

				<TextView
					android:id="@+id/adapter_related_video_title"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_marginTop="4dp"
					android:layout_weight="1"
					android:ellipsize="end"
					android:gravity="center_vertical"
					android:maxLines="1"
					android:textColor="#000"
					android:textSize="16sp"
					tools:text="Related video title"/>

				<TextView
					android:id="@+id/adapter_related_video_des"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_marginTop="4dp"
					android:layout_weight="2"
					android:ellipsize="end"
					android:gravity="top"
					android:maxLines="1"
					android:textColor="#6A6868"
					android:textSize="12sp"
					tools:text="Related video des"/>


			</LinearLayout>
		</LinearLayout>
	</android.support.v7.widget.CardView>
</RelativeLayout>

